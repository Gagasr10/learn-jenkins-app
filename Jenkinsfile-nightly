pipeline
{
    agent any

    environment {
        NETLIFY_SITE_ID = '48050a32-ad69-42cc-9c19-dd33ee11812b'
        NETLIFY_AUTH_TOKEN = credentials('netlify-token')
        REACT_APP_VERSION = "1.0.${BUILD_ID}"
    }

    stages {

        stage('Build Docker image') {
            steps {
                sh 'docker build -t my-playwright .'
            }
        }
    }
}
